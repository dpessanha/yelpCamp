<% layout('layouts/boilerplate') %>

<div class="container mb-5">
  <div class="card" style="width: 90%">
    <img
      src="<%= campground.image %> "
      alt="<%= campground.title %> image"
      class="card-img-top"
    />
    <div class="card-body">
      <h5 class="card-title"><%= campground.title %></h5>
      <p class="card-text"><%= campground.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Price: $<%= campground.price %>/night</li>
      <li class="list-group-item">Location: <%= campground.location %></li>
    </ul>
    <div class="card-body">
      <div class="row text-center">
        <div class="col-md-4">
          <form
            action="/campgrounds/<%= campground._id %>?_method=DELETE"
            method="POST"
          >
            <button class="card-link btn btn-danger btn-sm">
              Delete Campground
            </button>
          </form>
        </div>
        <div class="col-md-4">
          <a
            href="/campgrounds/<%= campground._id %>/edit "
            class="card-link btn btn-warning btn-sm"
            >Edit Campground</a
          >
        </div>
        <div class="col-md-4">
          <a href="/campgrounds" class="card-link btn btn-primary btn-sm"
            >Back to Campgrounds List</a
          >
        </div>
      </div>
    </div>
    <hr />
    <h2>Leave a Review</h2>
    <div>
      <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="mb-3">
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            name="review[rating]"
            id=""
            class="form-range"
            min="1"
            max="5"
          />
        </div>
        <div class="mb-3">
          <label for="body" class="form-label">Review</label>
          <textarea
            name="review[body]"
            id="body"
            cols="30"
            rows="4"
            class="form-control"
          ></textarea>
        </div>
        <button class="btn btn-success">Add Review</button>
      </form>
    </div>
  </div>
</div>
